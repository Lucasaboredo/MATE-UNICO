{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "singularName": "producto",
    "pluralName": "productos",
    "displayName": "Producto"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "descripcion": {
      "type": "string"
    },
    "precioBase": {
      "type": "decimal",
      "required": true
    },
    "activo": {
      "type": "boolean",
      "default": true
    },
    "material": {
      "type": "string"
    },
    "categoria": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::categoria.categoria",
      "inversedBy": "producto"
    },
    "variantes": {
      "type": "component",
      "component": "inventario.variantes",
      "repeatable": true
    }
  }
}
